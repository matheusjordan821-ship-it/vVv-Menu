-- [[ Team vVv Hub - Official Source ]]

local Player = game.Players.LocalPlayer
local CoreGui = game:GetService("CoreGui")

-- Criando a ScreenGui
local ScreenGui = Instance.new("ScreenGui")
ScreenGui.Name = "Team_vVv_Hub_Official"
ScreenGui.Parent = CoreGui
ScreenGui.ZIndexBehavior = Enum.ZIndexBehavior.Sibling

-- Função para arredondar cantos
local function AddCorner(parent, radius)
    local corner = Instance.new("UICorner")
    corner.CornerRadius = UDim.new(0, radius or 8)
    corner.Parent = parent
end

--- ==========================================
--- 1. INTERFACE DO MENU PRINCIPAL
--- ==========================================
local Main = Instance.new("Frame")
Main.Name = "MainFrame"
Main.Size = UDim2.new(0, 500, 0, 320)
Main.Position = UDim2.new(0.5, -250, 0.5, -160)
Main.BackgroundColor3 = Color3.fromRGB(15, 15, 15)
Main.Visible = false -- Fica escondido até por a chave
Main.Active = true
Main.Draggable = true
Main.Parent = ScreenGui
AddCorner(Main, 10)

-- Barra Lateral (Menu Tablet)
local SideBar = Instance.new("Frame")
SideBar.Size = UDim2.new(0, 130, 1, 0)
SideBar.BackgroundColor3 = Color3.fromRGB(35, 0, 90) -- Roxo vVv
SideBar.Parent = Main
AddCorner(SideBar, 10)

local SideLayout = Instance.new("UIListLayout", SideBar)
SideLayout.HorizontalAlignment = Enum.HorizontalAlignment.Center
SideLayout.Padding = UDim.new(0, 6)

local Title = Instance.new("TextLabel")
Title.Size = UDim2.new(1, 0, 0, 50)
Title.Text = "Team vVv"
Title.TextColor3 = Color3.white
Title.Font = Enum.Font.GothamBold
Title.TextSize = 20
Title.BackgroundTransparency = 1
Title.Parent = SideBar

-- Container das Páginas
local PageContainer = Instance.new("Frame")
PageContainer.Size = UDim2.new(1, -145, 1, -15)
PageContainer.Position = UDim2.new(0, 140, 0, 10)
PageContainer.BackgroundTransparency = 1
PageContainer.Parent = Main

local Pages = {}

-- Função para Criar Abas
local function CreateTab(name)
    local TabBtn = Instance.new("TextButton")
    TabBtn.Size = UDim2.new(0.9, 0, 0, 35)
    TabBtn.BackgroundColor3 = Color3.fromRGB(25, 25, 25)
    TabBtn.Text = name
    TabBtn.TextColor3 = Color3.white
    TabBtn.Font = Enum.Font.GothamMedium
    TabBtn.Parent = SideBar
    AddCorner(TabBtn, 6)

    local Page = Instance.new("ScrollingFrame")
    Page.Size = UDim2.new(1, 0, 1, 0)
    Page.BackgroundTransparency = 1
    Page.Visible = false
    Page.ScrollBarThickness = 2
    Page.Parent = PageContainer
    Instance.new("UIListLayout", Page).Padding = UDim.new(0, 5)

    TabBtn.MouseButton1Click:Connect(function()
        for _, p in pairs(Pages) do p.Visible = false end
        Page.Visible = true
    end)

    table.insert(Pages, Page)
    return Page
end

-- Criando as Abas do vVv Hub
local MainTab = CreateTab("Movement")
local ScriptsTab = CreateTab("Scripts")

-- Função para botões
local function CreateButton(parent, text, callback)
    local btn = Instance.new("TextButton")
    btn.Size = UDim2.new(1, -10, 0, 35)
    btn.BackgroundColor3 = Color3.fromRGB(45, 45, 45)
    btn.Text = text
    btn.TextColor3 = Color3.white
    btn.Font = Enum.Font.Gotham
    btn.Parent = parent
    AddCorner(btn, 6)
    btn.MouseButton1Click:Connect(callback)
end

-- Adicionando funções de teste
CreateButton(MainTab, "Speed 100 (vVv Boost)", function() Player.Character.Humanoid.WalkSpeed = 100 end)
CreateButton(MainTab, "Jump 150", function() Player.Character.Humanoid.JumpPower = 150 end)
CreateButton(ScriptsTab, "Print vVv Status", function() print("vVv Hub is Running!") end)

Pages[1].Visible = true

--- ==========================================
--- 2. SISTEMA DE CHAVE (LOGIN)
--- ==========================================
local KeyFrame = Instance.new("Frame")
KeyFrame.Size = UDim2.new(0, 320, 0, 200)
KeyFrame.Position = UDim2.new(0.5, -160, 0.5, -100)
KeyFrame.BackgroundColor3 = Color3.fromRGB(20, 20, 20)
KeyFrame.Parent = ScreenGui
AddCorner(KeyFrame, 12)

local KeyTitle = Instance.new("TextLabel")
KeyTitle.Size = UDim2.new(1, 0, 0, 50)
KeyTitle.Text = "vVv HUB | KEY SYSTEM"
KeyTitle.TextColor3 = Color3.white
KeyTitle.Font = Enum.Font.GothamBold
KeyTitle.BackgroundTransparency = 1
KeyTitle.Parent = KeyFrame

local KeyInput = Instance.new("TextBox")
KeyInput.Size = UDim2.new(0.8, 0, 0, 40)
KeyInput.Position = UDim2.new(0.1, 0, 0.35, 0)
KeyInput.BackgroundColor3 = Color3.fromRGB(30, 30, 30)
KeyInput.PlaceholderText = "Enter Key Here..."
KeyInput.Text = ""
KeyInput.TextColor3 = Color3.white
KeyInput.Parent = KeyFrame
AddCorner(KeyInput, 6)

local VerifyBtn = Instance.new("TextButton")
VerifyBtn.Size = UDim2.new(0.8, 0, 0, 40)
VerifyBtn.Position = UDim2.new(0.1, 0, 0.65, 0)
VerifyBtn.BackgroundColor3 = Color3.fromRGB(35, 0, 90)
VerifyBtn.Text = "VERIFY"
VerifyBtn.TextColor3 = Color3.white
VerifyBtn.Font = Enum.Font.GothamBold
VerifyBtn.Parent = KeyFrame
AddCorner(VerifyBtn, 6)

-- LÓGICA DE VERIFICAÇÃO (Mude sua chave aqui)
local CorrectKey = "vVv-BEST" 

VerifyBtn.MouseButton1Click:Connect(function()
    if KeyInput.Text == CorrectKey then
        KeyFrame:Destroy()
        Main.Visible = true
        print("Welcome to Team vVv Hub!")
    else
        KeyInput.Text = ""
        KeyInput.PlaceholderText = "INVALID KEY!"
        KeyInput.PlaceholderColor3 = Color3.fromRGB(255, 0, 0)
    end
end)
